pipeline {
    agent any
    stages {
        stage('Build') {
            steps {
                sh script: '''
                    echo "I am in build step!"
                    chmod 777 gradlew
                    ./gradlew build
                ''',
            label: "Building Project"
            }
        }
        stage('Test')
        {
            steps {
                sh script: '''
                    echo "I am in Test step"
                    ./gradlew test
                ''',
            label: "Running Unit Test Cases"
            }
        }
        stage('Static Code Analysis')
        {
            steps {
                sh script: '''
                    echo "I am in Sonarqube scan"
                ''',
            label: "Running Sonarqube Scan"
            }
        }
        stage('Build DockerImage')
        {
            steps {
                sh label: '', script: '''
			echo "I am at building stage"
			docker build -t httpserver:1.1 .
			docker run -d -p 8500:5000 httpserver:1.1
			'''
            }
        }
        stage('Publish DockerImage')
        {
            steps {
                sh label: '', script: '''
		echo "I am Pubishing DockerImage "
		docker login
                    docker tag httpserver:1.1 itskrrish/httpserver
                    docker push itskrrish/httpserver
		    '''
        	}
    	}
    }
    post{
    always{
    		deleteDir()
		}
	}
}
